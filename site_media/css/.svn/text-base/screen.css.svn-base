/* Basics */

html, body{
      background: rgb(228, 123, 37);
      text-align: center;
      font: normal 11px/20px Verdana,'Bitstream Vera Sans',Arial,sans-serif;}

      
#site{
	position: relative;
	width: 800px;
	margin: 10px auto;
	background: #f5f5f5;
	text-align: left;}
	
#top{
	overflow: hidden;
	position: relative;
	height: 160px;
	background: #fff url(../img/SummitCafeTopBanner.jpg);}


#page{
	background: rgb(255,123,37);
	padding: 30px 70px;
}
	
#end{
	background: rgb(255,123,37);
	padding: 0 50px 20px;
	text-align: right;
}	
#end a{
     color: #8c8988;
     text-decoration: none;}
     

input[type=text] {
		 color: black;
		 font-size: 11pt;
		 border: 1px dotted #888;
		 padding: 2px 4px;
}

textarea {
	 color: black;
	 font-size: 11pt;
	 border: 1px dotted #888;
	 padding: 2px 4px;
}

#login {
		background:	rgb(228, 123, 37);
		position: absolute;
		width: 75%;
		height: 60%;
		left: 0;
		right: 0;
		top: 0;
		bottom: 0;
		margin: auto;
		padding: 5%;
	   	font-weight: bold;
       	color: #555;
       	border: 1px solid #777;
        -moz-border-radius: 5px;
}

#chat-app {
	  background: rgb(228, 123, 37);	  
	  position: relative;
	  width: 600px;
	  height: 240px;
	  padding: 3px;
	  border: 1px solid #777;
	  -moz-border-radius: 5px;
}

#messages-container {
		         background: rgb(228, 225, 192);
                         overflow: auto; /* used for scrolling */
                         float: left;
			 position: relative;
			 width: 71%;
                         height: 86%;
                         margin: 3px;
			 /*border: 1px solid #777;*/
                         -moz-border-radius: 5px;
}

#form-container {
		position: relative;
		top: 89%;
		width: 100%;
		height: 11%;
		margin: 3px;
	        border: 1px solid #777;
         	padding: 3px;
		-moz-border-radius: 5px;
}

#grey-backing {
	position: absolute;
	width: 99%;
	height: 97%;	
	background: rgb(0, 0, 0);
	opacity: .6;
	-moz-border-radius: 2px;
}

form.message-form {
		  position: relative;
		  width: 100%;
		  height: 100%;
		  float: left;
}

#users-container {
		 overflow: auto;
		 background: rgb(228, 225, 192);
	 	 width: 27%;
		 position: relative;
		 float: right;
                 height: 86%;
                 margin: 3px;
          	 /*border: 1px solid #777;*/
                 -moz-border-radius: 5px;
}

div.user{
	background: rgb(206, 201, 176);
	border: 1px solid rgb(160, 160, 160);
	width: 99%;
	height: 34px;
	vertical-align: middle;
	-moz-border-radius: 5px;
}
div.user-name{
	width: 70%;
	float: right;
	height: 13px;
	position: relative;
	top: 20%;
	
	
}
img.user-pic{
	width: 32px;
	height: 32px;
	float: left;
	border: 1px solid #777;
	-moz-border-radius: 5px;
}

